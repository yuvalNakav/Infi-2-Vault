\begin_inset Formula 
\begin{align*}
\left|f\left(x\right)-f\left(x_{1}\right)\right| & =\left|f\left(x\right)-f_{N}\left(x\right)+f_{N}\left(x\right)-f_{N}\left(x_{1}\right)+f_{N}\left(x_{1}\right)-f\left(x_{1}\right)\right|\leq\\
\overset{\left(\triangle\right)}{\leq} & \left|f\left(x\right)-f_{N}\left(x\right)\right|+\left|f_{N}\left(x\right)-f_{N}\left(x_{1}\right)\right|+\left|f_{N}\left(x_{1}\right)-f\left(x_{1}\right)\right|\leq\\
\overset{\left(*\right)}{\leq} & 3\cdot\frac{\varepsilon}{3}=\varepsilon
\end{align*}

