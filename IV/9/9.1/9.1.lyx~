\begin_layout Paragraph*
הוכחה
\end_layout

\begin_layout Standard
נסמן 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}a_{n}=L\in\mathbb{R}$
\end_inset

.
 אזי מתקיים 
\begin_inset Formula 
\[
\forall k\in\mathbb{N}\,\stackrel[n=1]{k}{\sum}a_{n}=a_{k}+\stackrel[n=1]{k-1}{\sum}a_{n}\iff a_{k}=\stackrel[n=1]{k}{\sum}-\stackrel[n=1]{k-1}{\sum}\iff\underset{k\rightarrow\infty}{\lim}a_{k}=\underset{k\rightarrow\infty}{\lim}\stackrel[n=1]{k}{\sum}-\stackrel[n=1]{k-1}{\sum}=L-L=0
\]

\end_inset


\end_layout

\begin_layout Subsubsection*

\numeric on
3
\numeric off
.
 התבדרות הטור ההרמוני
\end_layout

\begin_layout Standard
נוכיח באינדוקציה על 
\begin_inset Formula $m$
\end_inset

 שמתקיים 
\begin_inset Formula $\forall m\in\mathbb{N}\quad\stackrel[n=1]{2^{m-1}}{\sum}=S_{2^{m-1}}\geq\frac{m+1}{2}$
\end_inset

:
\end_layout

\begin_layout Itemize

\series bold
בסיס
\series default
 
\begin_inset Formula $m=1$
\end_inset

: מתקיים 
\begin_inset Formula $S_{2^{1-1}}=S_{1}=1\geq\frac{1+1}{2}=1$
\end_inset

.
\end_layout

\begin_layout Itemize

\series bold
צעד
\series default
 נניח שמתקיים 
\begin_inset Formula $S_{2^{m-1}}\geq\frac{m+1}{2}$
\end_inset

, נוכיח שמתקיים 
\begin_inset Formula $S_{2^{m}}\geq\frac{m+2}{2}$
\end_inset

:
\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\begin{align*}
S_{2^{m}} & =S_{2^{m-1}}+h_{2^{m-1}+1}+h_{2^{m-1}+2}+\cdots h_{2^{m}-1}+h_{2^{m}}=\\
= & S_{2^{m-1}}+\frac{1}{2^{m-1}}+\frac{1}{2^{m-1}+1}+\cdots+\frac{1}{2^{m}-1}+\frac{1}{2^{m}}\geq S_{2^{m-1}}+2^{m-1}\left(\frac{1}{2^{m}}\right)\overset{step}{\geq}\\
\overset{step}{\geq} & \frac{m+1}{2}+\frac{2^{m-1}}{2^{m}}=\frac{m+1}{2}+\frac{1}{2}=\frac{\left(m+1\right)+1}{2}
\end{align*}

\end_inset

כנדרש.
\end_layout

\begin_layout Standard
לכן נקבל ש
\begin_inset Formula $S_{2^{k}}$
\end_inset

תת הסדרה של 
\begin_inset Formula $S_{k}$
\end_inset

 מקיימת 
\begin_inset Formula $\stackrel[n=1]{2^{k-1}}{\sum}=S_{2^{k-1}}\geq\frac{k+1}{2}\underset{k\rightarrow\infty}{\rightarrow}\infty$
\end_inset

 ולכן אינה חסומה, אזי ממשפט הירושה גם 
\begin_inset Formula $S_{k}$
\end_inset

 אינה חסומה ועל כן אינה מתכנסת, כנדרש.
\end_layout

\begin_layout Subsubsection*

\numeric on
