\numeric off
.
 אריתמטיקה של טורים מתכנסים
\end_layout

\begin_layout Standard
תהיינה 
\begin_inset Formula $\left(a_{n}\right)_{n=1}^{\infty}$
\end_inset

 סדרות ממשיות ויהא 
\begin_inset Formula $c\in\mathbb{R}$
\end_inset

 נתון.
 אזי מתקיים:
\end_layout

\begin_layout Enumerate
אם הטור 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס, אזי הטור 
\begin_inset Formula $\underset{n}{\sum}\left(ca_{n}\right)$
\end_inset

 מתכנס ומתקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}\left(ca_{n}\right)=c\cdot\stackrel[n=1]{\infty}{\sum}a_{n}$
\end_inset


\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $c\ne0$
\end_inset

, והטור 
\begin_inset Formula $\underset{n}{\sum}\left(ca_{n}\right)$
\end_inset

 מתכנס, אזי הטור 
\begin_inset Formula $\underset{n}{\sum}\left(a_{n}\right)$
\end_inset

 מתכנס ומקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}a_{n}=\frac{1}{c}\stackrel[n=1]{\infty}{\sum}\left(ca_{n}\right)$
\end_inset


\end_layout

\begin_layout Enumerate

\series bold
תוספת
\series default
 אם הטורים 
\begin_inset Formula $\underset{n}{\sum}a_{n},\underset{n}{\sum}b_{n}$
\end_inset

 מתכנסים, אזי הטור 
\begin_inset Formula $\underset{n}{\sum}\left(a_{n}+b_{n}\right)$
\end_inset

 מתכנס ומקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}\left(a_{n}+b_{n}\right)=\stackrel[n=1]{\infty}{\sum}a_{n}+\stackrel[n=1]{\infty}{\sum}b_{n}$
\end_inset


\end_layout

\begin_layout Subsubsection*

\numeric on
5
\numeric off
.
 קריטריון קושי לטורים מתכנסים
\end_layout

\begin_layout Standard
הטור 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס אם
\begin_inset Quotes erd
\end_inset

ם 
\begin_inset Formula 
\[
\forall\varepsilon>0\,\exists N\in\mathbb{N}\,\forall k,p\in\mathbb{N}\quad N<k\Rightarrow\left|\stackrel[n=k+1]{k+p}{\sum}a_{n}\right|<\varepsilon
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
הוכחה
\end_layout

\begin_layout Standard
נשים לב שמתקיים 
\begin_inset Formula $\forall k,p\in\mathbb{N}\quad\left|\stackrel[n=k+1]{k+p}{\sum}a_{n}\right|=\left|\stackrel[n=1]{k+p}{\sum}a_{n}-\stackrel[n=1]{k}{\sum}a_{n}\right|=\left|S_{k+p}-S_{k}\right|$
\end_inset

, ולכן הגדרה זו שקולה לקריטריון קושי להתכנסות סדרות, כנדרש.
\end_layout

\begin_layout Subsubsection*

\numeric on
6
\numeric off
.
 טור מתכנס אם
\begin_inset Quotes erd
\end_inset

ם טור ה
\begin_inset Formula $\mathbf{N}$
\end_inset

-זנב מתכנס
\end_layout

\begin_layout Standard
יהי 
\begin_inset Formula $N\in\mathbb{N}$
\end_inset

.
 הטור 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס אם
\begin_inset Quotes erd
\end_inset

ם טור ה
\begin_inset Formula $N$
\end_inset

-זנב שלו 
\begin_inset Formula $\underset{n}{\sum}a_{n+N}$
\end_inset

 מתכנס, ואז מתקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}a_{n+N}=\stackrel[n=1]{\infty}{\sum}a_{n}-\stackrel[n=1]{N}{\sum}a_{n}$
\end_inset

.
\end_layout

\begin_layout Standard

\series bold
הוכחה
\end_layout

\begin_layout Standard
נשים לב שכאשר נגדיר 
\begin_inset Formula $S_{k}$
\end_inset

 סדרת הסכומים החלקיים של 
\begin_inset Formula $a_{n}$
\end_inset

, ואת 
\begin_inset Formula $T_{k}$
\end_inset

 סדרת הסכומים החלקיים של 
\begin_inset Formula $a_{n+N}$
\end_inset

, מתקיים 
\begin_inset Formula 
\[
\forall k\in\mathbb{N}\,T_{k}=\stackrel[n=N+1]{k}{\sum}a_{n}=\stackrel[n=1]{k}{\sum}a_{n}-\stackrel[n=1]{N}{\sum}a_{n}=S_{k}-S_{N}
\]

\end_inset


\end_layout

\begin_layout Standard
והרי בין אם הטור מתכנס או לא, 
\begin_inset Formula $S_{N}\in\mathbb{R}$
\end_inset

 קבוע ואינו תלוי ב-
\begin_inset Formula $k$
\end_inset

 ועל כן מאריתמטיקה של גבולות 
\begin_inset Formula $T_{k}$
\end_inset

ו-
\begin_inset Formula $S_{k}$
\end_inset

 מתכנסים ומתבדרים יחדיו, כנדרש.
\end_layout

