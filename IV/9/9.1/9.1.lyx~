\begin_layout Standard
ראשית נציין שסדרה תיקרא סדרה הנדסית אם
\begin_inset Quotes erd
\end_inset

ם קיימים 
\begin_inset Formula $a_{1},q\in\mathbb{R}$
\end_inset

 המקיימים 
\begin_inset Formula $\forall n\in\mathbb{N}\,a_{n}=a_{1}q^{n-1}$
\end_inset


\begin_inset Newline newline
\end_inset

בנוסף, נשים לב שהסדרה 
\begin_inset Formula $\left(q_{k}\right)_{n=1}^{\infty},\,\forall k\in\mathbb{N}\,q_{k}=q^{k},q_{1}=q\in\mathbb{R}$
\end_inset

 מתכנסת אם
\begin_inset Quotes erd
\end_inset

ם 
\begin_inset Formula $\left|q\right|\leq1$
\end_inset

, ואם כך בפרט גם אפסה.
 
\begin_inset Newline newline
\end_inset

נשים לב ש
\begin_inset Formula $S_{k}$
\end_inset

מקיימת:
\begin_inset Formula 
\[
\forall k\in\mathbb{N}\,S_{k}=\stackrel[n=1]{k}{\sum}a_{n}=a_{1}+a_{1}\cdot q+\dots+a_{1}q^{k-1}=a_{1}\left(1+q+q^{2}+\cdots+q^{k-1}\right)=a_{1}\frac{1-q^{k}}{1-q}\,\left(*\right)
\]

\end_inset

כאשר 
\begin_inset Formula $\left(*\right)$
\end_inset

 תקפה לכל 
\begin_inset Formula $q\ne1$
\end_inset


\begin_inset Newline newline
\end_inset

ולכן, אם 
\begin_inset Formula $q_{k}$
\end_inset

 לא אפסה הסכום ימשיך לגדול לכל 
\begin_inset Formula $k$
\end_inset

, אזי משלילת הנ
\begin_inset Quotes erd
\end_inset

ל נקבל ש
\begin_inset Formula $S_{k}$
\end_inset

 מתכנסת
\begin_inset Formula $\iff$
\end_inset


\begin_inset Formula $q_{k}$
\end_inset

מתכנסת 
\begin_inset Formula $\iff$
\end_inset


\begin_inset Formula $\left|q\right|\leq1$
\end_inset


\begin_inset Newline newline
\end_inset

אם 
\begin_inset Formula $a_{1}=0$
\end_inset

, אזי 
\begin_inset Formula $\forall n\in\mathbb{N}\,a_{n}=a_{1}q^{n-1}=0$
\end_inset

 ולכן 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}a_{n}=0$
\end_inset

.
\end_layout

\begin_layout Description
אחרת נשאל: האם הטור 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס? אם 
\begin_inset Formula $a_{1}\ne0$
\end_inset

, תלוי ב
\begin_inset Formula $q$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Description
\begin_inset Formula $q=1$
\end_inset

 אזי 
\begin_inset Formula $a_{n}$
\end_inset

קבועה, ולכן לא תתכנס לכל 
\begin_inset Formula $a_{1}\ne0$
\end_inset

, שכן 
\begin_inset Formula $\forall k\in\mathbb{N}\,\stackrel[n=1]{k}{\sum}a_{n}=k\cdot a_{1}\underset{n\rightarrow\infty}{\rightarrow}\infty$
\end_inset

, 
\end_layout

\begin_layout Description
