.
 משפט לייבניץ לטורים מתחלפים
\end_layout

\begin_layout Standard
יהי 
\begin_inset Formula $\underset{n}{\sum}\left(-1\right)^{n+1}a_{n}$
\end_inset

 טור לייבניץ.
 אזי:
\end_layout

\begin_layout Enumerate
הטור 
\begin_inset Formula $\underset{n}{\sum}\left(-1\right)^{n+1}a_{n}$
\end_inset

 מתכנס
\end_layout

\begin_layout Enumerate
נסמן 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n}=L\in\mathbb{R}$
\end_inset

.
 אזי 
\begin_inset Formula $0\leq a_{1}-a_{2}\leq L\leq a_{1}$
\end_inset


\end_layout

\begin_layout Enumerate
יהי 
\begin_inset Formula $N\in\mathbb{N}$
\end_inset

.
 נגדיר 
\begin_inset Formula $r_{N}=\stackrel[n=N+1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n}$
\end_inset

 סכום טור ה-
\begin_inset Formula $N$
\end_inset

 זנב של 
\begin_inset Formula $\underset{n}{\sum}\left(-1\right)^{n+1}a_{n}$
\end_inset

.
 אזי 
\begin_inset Formula $\left|r_{N}\right|\leq a_{N+1}$
\end_inset


\end_layout

\begin_layout Paragraph*
הוכחה
\end_layout

\begin_layout Enumerate
נגדיר 
\begin_inset Formula $\forall n\in\mathbb{N}\,b_{n}=\left(-1\right)^{n+1}a_{n}$
\end_inset

, ונגדיר את הסס
\begin_inset Quotes erd
\end_inset

ח 
\begin_inset Formula $\left(S_{k}\right)_{n=1}^{\infty}$
\end_inset

, ונסתכל על תתי הסדרות 
\begin_inset Formula $S_{2k-1},S_{2k}$
\end_inset

:
\begin_inset Formula 
\[
S_{2\left(k+1\right)}-S_{2k}=\left(-1\right)^{2k+2}a_{2k+2}+\left(-1\right)^{2k+1}a_{2k+1}+\stackrel[n=1]{2k}{\sum}\left(-1\right)^{n+1}a_{n}-\stackrel[n=1]{2k}{\sum}\left(-1\right)^{n+1}a_{n}=a_{2k+2}-a_{2k+1}\stackrel[decreaseing]{monotonic}{\geq}0
\]

\end_inset


\begin_inset Formula 
\[
S_{2\left(k+1\right)-1}-S_{2k-1}=\left(-1\right)^{2k+1}a_{2k+1}+\left(-1\right)^{2k}a_{2k}+\stackrel[n=1]{2k}{\sum}\left(-1\right)^{n+1}a_{n}-\stackrel[n=1]{2k}{\sum}\left(-1\right)^{n+1}a_{n}=a_{2k}-a_{2k+1}\stackrel[decreaseing]{monotonic}{\leq}0
\]

\end_inset

כלומר 
\begin_inset Formula $S_{2k}$
\end_inset

 מונוטונית עולה ו
\begin_inset Formula $S_{2k-1}$
\end_inset

 מונוטונית יורדת
\begin_inset Newline newline
\end_inset

בנוסף נשים לב שמתקיים 
\begin_inset Formula 
\[
\forall k\in\mathbb{N}\,S_{2k}=S_{2k-1}+b_{2k}=S_{2k-1}+\left(-1\right)^{2k+1}a_{2k}\overset{\left(a_{2k}\geq0\right)}{\leq}S_{2k-1}
\]

\end_inset

ולכן סדרת הקטעים 
\begin_inset Formula $\left(\left[S_{2k},S_{2k-1}\right]\right)_{k=1}^{\infty}$
\end_inset

 מקיימת את הלמה של קנטור, ובנוסף מכך מתקיים 
\begin_inset Formula 
\[
\forall k\in\mathbb{N}\,S_{2k-1}-S_{2k}=S_{2k-1}-\left(S_{2k-1}+b_{2k}\right)=a_{2k}\iff\underset{k\rightarrow\infty}{\lim}\left(S_{2k-1}-S_{2k}\right)=0
\]

\end_inset

 אזי מהלמה של קנטור נקבל שמתקיים 
\begin_inset Formula $\underset{k\rightarrow\infty}{\lim}S_{2k-1}=L=\underset{k\rightarrow\infty}{\lim}S_{2k}$
\end_inset

, ומשום ש
\begin_inset Formula $\left\{ S_{2k-1}\mid k\in\mathbb{N}\right\} \cup\left\{ S_{2k}\mid k\in\mathbb{N}\right\} =\left\{ S_{k}\mid k\in\mathbb{N}\right\} $
\end_inset

, מתקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n}=L$
\end_inset

 כנדרש.
\end_layout

\begin_layout Enumerate
מהלמה של קנטור, נקבל שמתקיים 
\begin_inset Formula $L=\sup\left\{ S_{2k}\mid k\in\mathbb{N}\right\} $
\end_inset

, אזי ממשפט החסם העליון 
\begin_inset Formula $L\geq S_{2}=a_{1}-a_{2}\geq0$
\end_inset

.
\begin_inset Newline newline
\end_inset

באותו אופן 
\begin_inset Formula $L=\inf\left\{ S_{2k-1}\mid k\in\mathbb{N}\right\} $
\end_inset

 ולכן ממשפט החסם התחתון 
\begin_inset Formula $L\leq S_{1}=a_{1}$
\end_inset


\begin_inset Newline newline
\end_inset

כלומר קיבלנו 
\begin_inset Formula $0\leq a_{1}-a_{2}\leq L\leq a_{1}$
\end_inset

 כנדרש.
\end_layout

\begin_layout Enumerate
ממשפט על טורים מתכנסים, נקבל שטור ה-
\begin_inset Formula $N$
\end_inset

 זנב של 
\begin_inset Formula $b_{n}$
\end_inset

 מתכנס גם הוא, ומתקיים 
\begin_inset Formula 
\[
r_{N}=\stackrel[n=N+1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n}=\left(-1\right)^{N}\stackrel[n=1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n+N}
\]

\end_inset

והרי סדרת הזנב 
\begin_inset Formula $a_{n+N}$
\end_inset

 אפסה, אי שלילית ומונוטונית יורדת גם היא ממשפט הירושה.
 לכן 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}\left(-1\right)^{n+1}a_{n+N}$
\end_inset

 טור לייבניץ.
\begin_inset Newline newline
\end_inset

אזי מסעיף
