\begin_deeper
\begin_layout Itemize
נגדיר את הפונקציה הצוברת )קיימת מהמשפט היסודי(: 
\begin_inset Formula $\tilde{F}$
\end_inset

 המקיימת 
\begin_inset Formula $\forall x\in\left[a,b\right]\,\tilde{F}\left(x\right)=\int\limits _{a}^{x}f\left(t\right)dt$
\end_inset


\end_layout

\begin_layout Itemize
אזי מתקיים
\begin_inset Formula 
\[
G\left(x\right)=\int\limits _{\varphi\left(x\right)}^{\psi\left(x\right)}f\left(t\right)dt=\int\limits _{\varphi\left(x\right)}^{a}f\left(t\right)dt+\int\limits _{a}^{\psi\left(x\right)}f\left(t\right)dt=\int\limits _{a}^{\psi\left(x\right)}f\left(t\right)dt-\int\limits _{a}^{\varphi\left(x\right)}f\left(t\right)dt=\tilde{F}\left(\psi\left(x\right)\right)-\tilde{F}\left(\varphi\left(x\right)\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $f$
\end_inset

 רציפה בתחומה ועל כן מהמשפט היסודי 
\begin_inset Formula $\tilde{F}$
\end_inset

 גזירה בתחומה גם כן.
 אזי מתקיים לכל 
\begin_inset Formula $x_{0}$
\end_inset

 בתחום
\begin_inset Formula 
\[
G'\left(x_{0}\right)=\left(\tilde{F}\left(\psi\left(x_{0}\right)\right)\right)'-\left(\tilde{F}\left(\varphi\left(x_{0}\right)\right)\right)'\overset{chain'}{=}\tilde{F}'\left(\psi\left(x\right)\right)\psi'\left(x\right)-\tilde{F}'\left(\varphi\left(x\right)\right)\varphi'\left(x\right)=f\left(\psi\left(x\right)\right)\cdot\psi'\left(x\right)-f\left(\varphi\left(x\right)\right)\cdot\varphi'\left(x\right)
\]

\end_inset


\end_layout

