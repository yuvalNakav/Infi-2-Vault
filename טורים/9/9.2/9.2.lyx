\begin_layout Paragraph*
הוכחה
\end_layout

\begin_layout Enumerate
נשים לב שמתקיים כמעט תמיד 
\begin_inset Formula $\sqrt[n]{a_{n}}\leq q$
\end_inset

 אם
\begin_inset Quotes erd
\end_inset

ם מתקיים כמעט תמיד 
\begin_inset Formula $0\leq a_{n}\leq q^{n}$
\end_inset

, והרי 
\begin_inset Formula $q\in\left(0,1\right)$
\end_inset

 ולכן הטור 
\begin_inset Formula $\underset{n}{\sum}q^{n}$
\end_inset

מתכנס
\begin_inset Newline newline
\end_inset

ממבחן השוואה נקבל שלכן 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס גם הוא.
\end_layout

\begin_layout Enumerate
אם מתקיים כמעט תמיד 
\begin_inset Formula $\sqrt[n]{a_{n}}\geq1$
\end_inset

, אזי בפרט מתקיים כמעט תמיד 
\begin_inset Formula $a_{n}\geq1$
\end_inset

.
 והרי הטור 
\begin_inset Formula $\underset{n}{\sum}1$
\end_inset

 מתבדר לאינסוף.
\begin_inset Newline newline
\end_inset

לכן ממבחן ההשוואה הטור מתבדר גם הוא.
\end_layout

\begin_layout Subsubsection*

\numeric on
9
\numeric off
.
 מבחן השורש הגבולי של קושי להתכנסות טורים אי שליליים
\end_layout

\begin_layout Standard
יהי 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 טור א
\begin_inset Quotes erd
\end_inset

ש.
 נניח שקיים הגבול העליון 
\begin_inset Formula $\underset{n\rightarrow\infty}{\limsup}\sqrt[n]{a_{n}}=L\in\mathbb{R}$
\end_inset

.
\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $L\in\left[0,1\right)$
\end_inset

 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס
\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $L>1$
\end_inset

 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתבדר
\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $L=1$
\end_inset

 לא נוכל להסיק כלום על התכנסות הטור
\end_layout

\begin_layout Paragraph*
הוכחה
\end_layout

\begin_layout Enumerate
נסתכל על 
\begin_inset Formula $u_{n}$
\end_inset

 סדרת הסופרמה של 
\begin_inset Formula $\sqrt[n]{a_{n}}$
\end_inset

.
 אזי מתקיים מהגדרתה 
\begin_inset Formula $\forall n\in\mathbb{N}\,\sqrt[n]{a_{n}}\leq u_{n}\iff a_{n}\leq\left(u_{n}\right)^{n}$
\end_inset


\begin_inset Newline newline
\end_inset

משום שהגבול העליון של 
\begin_inset Formula $\sqrt[n]{a_{n}}$
\end_inset

 הוא 
\begin_inset Formula $L\in\left[0,1\right)$
\end_inset

, מתקיים באופן שכיח עבור
\begin_inset Formula $\varepsilon=\frac{1-L}{2}$
\end_inset

, 
\begin_inset Formula $a_{n}<\left(\frac{L+1}{2}\right)^{n}<1\iff\sqrt[n]{a_{n}}<L+\varepsilon=L+\frac{1-L}{2}=\frac{L+1}{2}<1$
\end_inset


\begin_inset Newline newline
\end_inset

והרי 
\begin_inset Formula $L\in\left[0,1\right)\Rightarrow\frac{L+1}{2}\in\left(0,1\right)\forall n\in\mathbb{N}\,\left(\frac{L+1}{2}\right)^{n}\in\left(0,1\right)$
\end_inset

 ולכן ממבחן ההשוואה 
\begin_inset Formula $\underset{n}{\sum}a_{n}$
\end_inset

 מתכנס 
\end_layout

\begin_layout Enumerate
אם מתקיים 
\begin_inset Formula $\underset{n\rightarrow\infty}{\limsup}\sqrt[n]{a_{n}}>1$
\end_inset

, אזי בפרט מתקיים כמעט תמיד לכל 
\begin_inset Formula $\varepsilon>0$
\end_inset

, 
\begin_inset Formula $a_{n}>\left(1+\varepsilon\right)^{n}>1$
\end_inset

.
 והרי הטור 
\begin_inset Formula $\underset{n}{\sum}1$
\end_inset

 מתבדר לאינסוף
\begin_inset Newline newline
\end_inset

לכן ממבחן ההשוואה הטור מתבדר גם הוא.
\end_layout

