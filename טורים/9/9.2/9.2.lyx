\numeric on
10
\numeric off
.
 מבחן האינטגרל לטורים חיוביים
\end_layout

\begin_layout Standard
תהי 
\begin_inset Formula $f:\left[1,\infty\right)\rightarrow\mathbb{R}$
\end_inset

 אי שלילית ומונוטונית יורדת ב
\begin_inset Formula $\left[1,\infty\right)$
\end_inset

.
\end_layout

\begin_layout Standard
אזי הטור 
\begin_inset Formula $\underset{n}{\sum}f\left(n\right)$
\end_inset

 מתכנס אם
\begin_inset Quotes erd
\end_inset

ם האינטגרל 
\begin_inset Formula $\stackrel[1]{\infty}{\int}f\left(x\right)dx$
\end_inset

 מתכנס
\end_layout

\begin_layout Standard
ובמקרה זה מתקיים 
\begin_inset Formula $\stackrel[n=1]{\infty}{\sum}f\left(n\right)\leq\stackrel[1]{\infty}{\int}f\left(x\right)dx\leq\stackrel[n=2]{\infty}{\sum}f\left(n\right)$
\end_inset


\end_layout

\begin_layout Paragraph*
הוכחה
\end_layout

\begin_layout Standard
נגדיר סדרה 
\begin_inset Formula $a_{n}$
\end_inset

המוגדרת על ידי 
\begin_inset Formula $\forall n\in\mathbb{N}\,a_{n}=f\left(n\right)$
\end_inset

 ואת סדרת הסכומים החלקיים שלה 
\begin_inset Formula $S_{k}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $f$
\end_inset

 מונוטונית יורדת ולכן אינטגרבילית לכל 
\begin_inset Formula $1<N\in\mathbb{N}$
\end_inset

 בקטע הסגור 
\begin_inset Formula $\left[1,N\right]$
\end_inset

.
\end_layout

\begin_layout Standard
בנוסף משום ש
\begin_inset Formula $f$
\end_inset

 אי שלילית, האינטגרל 
\begin_inset Formula $\stackrel[1]{\infty}{\int}f\left(x\right)dx$
\end_inset

 מתכנס אם
\begin_inset Quotes erd
\end_inset

ם הפונקציה הצוברת 
\begin_inset Formula $\tilde{F}\left(N\right)=\stackrel[1]{N}{\int}f\left(x\right)dx$
\end_inset

 חסומה מלעיל,
\end_layout

\begin_layout Standard
ו-
\begin_inset Formula $\tilde{F}$
\end_inset

חסומה מלעיל אם
\begin_inset Quotes erd
\end_inset

ם הסדרה 
\begin_inset Formula $\left(\stackrel[1]{k}{\int}f\left(x\right)dx\right)_{k=1}^{\infty}$
\end_inset

 חסומה
\end_layout

\begin_layout Standard
בדומה, 
\begin_inset Formula $\underset{n}{\sum}f\left(n\right)$
\end_inset

 מתכנס אם
\begin_inset Quotes erd
\end_inset

ם 
\begin_inset Formula $S_{k}$
\end_inset

 חסומה מלעיל.
\end_layout

\begin_layout Standard
משום ש
\begin_inset Formula $f$
\end_inset

 מונוטונית יורדת, מתקיים 
\begin_inset Formula $\forall n\in\mathbb{N}\,\forall x\in\left[n,n+1\right]\quad f\left(n+1\right)\leq f\left(x\right)\leq f\left(n\right)$
\end_inset

 ועל כן ממונוטוניות האינטגרל מתקיים לכל 
\begin_inset Formula $n\in\mathbb{N},x\in\left[n,n+1\right]$
\end_inset

 
\begin_inset Formula 
\[
f\left(n+1\right)=\left(n+1-n\right)f\left(n+1\right)=\stackrel[n]{n+1}{\int}f\left(n+1\right)dx\leq\stackrel[n]{n+1}{\int}f\left(x\right)dx\leq\stackrel[n]{n+1}{\int}f\left(n\right)dx=\left(n+1-n\right)f\left(n\right)=f\left(n\right)
\]

\end_inset


\end_layout

\begin_layout Standard
אזי מתקיים מהנ
\begin_inset Quotes erd
\end_inset

ל 
\begin_inset Formula 
\[
\forall2\leq k\in\mathbb{N}\quad\stackrel[n=1]{k-1}{\sum}f\left(n+1\right)\leq\stackrel[n=1]{k-1}{\sum}\stackrel[1]{k}{\int}f\left(x\right)dx\leq\stackrel[n=1]{k-1}{\sum}f\left(n\right)
\]

\end_inset


\end_layout

\begin_layout Standard
ולכן הסדרה 
\begin_inset Formula $\left(\stackrel[1]{k}{\int}f\left(x\right)dx\right)_{k=1}^{\infty}$
\end_inset

 חסומה, אזי 
\begin_inset Formula $\tilde{F}$
\end_inset

, לכן האינטגרל מתכנס, וממבחן ההשוואה נקבל שהטור מתכנס גם הוא, כנדרש.
\end_layout

